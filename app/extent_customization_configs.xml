<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report theme -->
        <theme>standard</theme>

        <documentTitle>QTrip Regression Suite</documentTitle>
        
        <!-- Time format -->
        <dateFormat>yyyy-MM-dd HH:mm:ss</dateFormat>
        
        <!-- Timestamp format -->
        <timestampFormat>yyyy-MM-dd HH:mm:ss.SSS</timestampFormat>
        
        <!-- Report name -->
        <reportName>Regression test for QTrip</reportName>
        
        <!-- Report file path -->
        <reportFilePath>./test-output/ExtentReportsDemo.html</reportFilePath>
        
        <!-- Automatically create new report file for each test run -->
        <autoCreateRelativePathMedia>true</autoCreateRelativePathMedia>
        
        <!-- Enable offline mode -->
        <offlineMode>false</offlineMode>
        
        <!-- Enable status icons -->
        <statusIcons>true</statusIcons>
        
        <!-- Enable timeline view -->
        <timelineEnabled>true</timelineEnabled>
        
        <!-- Configuration for tests -->
        <test>
            <!-- Test status icons -->
            <statusIcons>
                <pass> <i class="fas fa-check-circle"></i> </pass>
                <fail> <i class="fas fa-times-circle"></i> </fail>
                <fatal> <i class="fas fa-exclamation-circle"></i> </fatal>
                <error> <i class="fas fa-exclamation-triangle"></i> </error>
                <warning> <i class="fas fa-exclamation-triangle"></i> </warning>
                <skip> <i class="fas fa-chevron-circle-right"></i> </skip>
                <unknown> <i class="fas fa-question-circle"></i> </unknown>
            </statusIcons>
        </test>
    </configuration>
</extentreports>
